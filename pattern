import java.util.Scanner;
class Pattern1
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int size=sc.nextInt();
int i,j,k=1;
for(i=1;i<=size;i++){
for(j=1;j<size-1;j++){
System.out.print(" ");
}
for(j=1;j<=i;j++){
System.out.print(k++ + " ");
}
System.out.println();
}
}
}
