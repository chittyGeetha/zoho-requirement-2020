import java.util.Scanner;
class Pattern1
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int n=sc.nextInt();
int i,j,k,l=1;
for (i= 0; i<= n; i++)
        {
            for (j=1; j<=n-i; j++)
            {
                System.out.print(" ");
            }
            for (k=0;k<=i;k++)
            {
                System.out.print(l++);
		} 
                System.out.println("");
        }
}
}
